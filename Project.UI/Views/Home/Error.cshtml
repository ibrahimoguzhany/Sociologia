@using Project.ENTITIES.Messages
@using Project.UI.ViewModels
@model ErrorViewModel
@{
    ViewBag.Title = "Error";
}


<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">


        <h2>@Model.Header</h2>
        <hr />
        <div class="text-danger">
            <h2><span class="glyphicon glyphicon-remove-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
            <hr />
            <p class="text-justify">
                @foreach (ErrorMessageObj msg in Model.Items)
                {
                    @msg.Message<br />
                }
            </p>
        </div>
    </div>
</div>

@{
    string js = string.Empty;

    if (Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout + ");";
    }
}

<script>
    $(function () {
        @Html.Raw(js);
    });
</script>