@using Project.UI.ViewModels
@model OkViewModel
@{
    ViewBag.Title = Model.Title;
}


<link href="~/Content/login-register.css" rel="stylesheet" />

<div class="wrapper fadeInDown">
    <div id="formContent">


        <h2>@Model.Header</h2>
        <hr />
        <div class="text-danger">
            <h2><span class="glyphicon glyphicon-ok-circle"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
            <hr />
            <p class="text-justify">
                @foreach (string msg in Model.Items)
                {
                    @msg<br />
                }
            </p>
        </div>
    </div>
</div>

@{ 
    string js = string.Empty;

    if(Model.IsRedirecting)
    {
        js = "setTimeout(function() { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.RedirectingTimeout  + ");";
    }
}

<script>
    $(function () {
        @Html.Raw(js);

    });
</script>